/*Escreva um programa que leia um vetor de dez caracteres e verifique se o vetor é
ou não um palíndromo.*/

#include <stdio.h>
const int tam = 5;
int main()
{
    int num, vet[tam], comp[tam];
    printf("Vetor:\n");
    for(int i = 0; i < tam; i++){
        scanf("%d", &vet[i]);
        comp[i] = vet[i];
    }
    int palindromo = 1;
    for(int i = 0; i < tam / 2; i++){
        if(vet[i] != comp[(tam - 1) - i]){
           palindromo = 0; 
        }
    }
    
    if(palindromo){
        printf("O numero e um palindromo");
    }else {
        printf("Nao e um palindromo");
    }
    return 0;
}
